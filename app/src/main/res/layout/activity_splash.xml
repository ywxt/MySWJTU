<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="vm" type="ywxt.myswjtu.ui.splash.SplashViewModel"/>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.splash.SplashActivity" android:orientation="vertical">
        <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="0dp" app:srcCompat="@drawable/bg"
                android:layout_weight="1"
                android:id="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        />
        <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:tint="@color/logo"
                android:layout_width="wrap_content"
                android:layout_height="64dp" app:srcCompat="@drawable/logo"/>
       


    </LinearLayout>
</layout>